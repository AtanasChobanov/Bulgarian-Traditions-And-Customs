<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ШЕВИЦА</title>
	<link rel="icon" type="image/png" href="~/images/logo-favicon.png" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/BulgarianTraditionsAndCustoms.styles.css" asp-append-version="true" />
</head>
<body class="@ViewData["BodyClass"]">
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark fixed-top">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/images/logo-rеmove-bg.png" alt="Bulgarian Traditions" style="height: 50px;" class="rounded-pill" />
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex">
					<ul class="navbar-nav mx-auto">
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Traditions" asp-action="Index">Традиции</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Holidays" asp-action="Index">Празници</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Participants" asp-action="Index">Участници</a>
						</li>
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<main role="main" class="pb-3">
		@if (TempData["DeleteSuccess"] != null || TempData["DeleteError"] != null)
		{
			<div class="alert-fixed-top-right">
				@if (TempData["DeleteSuccess"] != null)
				{
					<div class="alert alert-success alert-dismissible fade show border-0 shadow-lg" role="alert">
						<div class="d-flex align-items-center">
							<i class="bi bi-check-circle-fill fs-4 me-2"></i>
							<div>@TempData["DeleteSuccess"]</div>
						</div>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="this.parentElement.remove()"></button>
					</div>
				}
				@if (TempData["DeleteError"] != null)
				{
					<div class="alert alert-danger alert-dismissible fade show border-0 shadow-lg" role="alert">
						<div class="d-flex align-items-center">
							<i class="bi bi-exclamation-octagon-fill fs-4 me-2"></i>
							<div>@TempData["DeleteError"]</div>
						</div>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="this.parentElement.remove()"></button>
					</div>
				}
			</div>
		}
		@RenderBody()
	</main>

	<footer class="site-footer">
		<div class="container">
			<!-- Separator -->
			<div id="hero-about-separator" class="text-center py-5">
				<img src="~/images/separator.png" class="img-separator" alt="Bulgarian Pattern Separator" />
			</div>
			<div class="row g-4">
				<!-- Brand Column -->
				<div class="col-lg-4 mb-4 mb-lg-0">
					<div class="footer-brand d-flex align-items-center mb-3">
						<img src="~/images/logo-rеmove-bg.png" alt="Logo" class="me-2" style="height: 50px;" />
					</div>
					<p class="footer-tagline">
						Съхраняваме духа на предците ни за бъдещите поколения.
					</p>
				</div>

				<!-- Links Column -->
				<div class="col-lg-4 mb-4 mb-lg-0">
					<h5 class="footer-links-title">Бързи връзки</h5>
					<div class="row">
						<div class="col-6">
							<a class="footer-link" asp-controller="Home" asp-action="Index">Начало</a>
							<a class="footer-link" asp-controller="Traditions" asp-action="Index">Традиции</a>
						</div>
						<div class="col-6">
							<a class="footer-link" asp-controller="Holidays" asp-action="Index">Празници</a>
							<a class="footer-link" asp-controller="Participants" asp-action="Index">Участници</a>
						</div>
					</div>
				</div>

				<!-- Contact Column -->
				<div class="col-lg-4">
					<h5 class="footer-links-title">Контакти</h5>
					<p class="mb-3">
						<i class="bi bi-envelope-fill text-danger me-2"></i>
						<a href="mailto:atanaschobanov2008@gmail.com" class="footer-contact-link">atanaschobanov2008@gmail.com</a>
					</p>
					<div class="d-flex mt-3">
						<a href="https://www.facebook.com/profile.php?id=100048348197789" target="_blank" class="social-icon"><i class="bi bi-facebook text-success"></i></a>
						<a href="https://www.instagram.com/___meteors___/" target="_blank" class="social-icon"><i class="bi bi-instagram text-success"></i></a>
						<a href="https://www.youtube.com/%D0%90%D1%82%D0%B0%D0%BD%D0%B0%D1%81%D0%A7%D0%BE%D0%B1%D0%B0%D0%BD%D0%BE%D0%B2-%D1%8B9%D0%BF" target="_blank" class="social-icon"><i class="bi bi-youtube text-success"></i></a>
					</div>
				</div>
			</div>

			<div class="copyright-section text-center text-muted">
				<p class="mb-0 text-muted">
					&copy; @DateTime.Now.Year - ШЕВИЦА - Виртуален каталог на българските традиции
				</p>
			</div>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

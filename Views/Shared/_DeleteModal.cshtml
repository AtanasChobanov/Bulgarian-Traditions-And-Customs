@model BulgarianTraditionsAndCustoms.Models.DeleteModalViewModel

<div class="modal fade" id="deleteModal-@Model.Id" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content glass-panel border shadow-lg" style="border-radius: 2.5rem; background: rgba(255, 255, 255, 0.85); overflow: hidden;">
			
			<div class="modal-body text-center">
				<!-- Pulsing Warning Icon -->
				<div class="mb-4">
					<div class="d-inline-flex align-items-center justify-content-center bg-red-soft rounded-circle" style="width: 100px; height: 100px;">
						<i class="bi bi-exclamation-triangle-fill display-3 text-red"></i>
					</div>
				</div>

				<h3 class="fw-bold mb-3 text-forest">Внимание!</h3>
				
				<p class="fs-5 text-secondary mb-4">
					Сигурни ли сте, че искате да изтриете @Model.DisplayTitle 
					<span class="d-block mt-2 fw-bold text-red fs-4">"@Model.EntityName"</span>
				</p>
				
				<div class="glass-panel p-3 mb-4 border-red-soft" style="background: rgba(208, 47, 47, 0.03); border-radius: 1.5rem;">
					<p class="small text-muted mb-0">
						<i class="bi bi-info-circle me-2"></i>
						@if (Model.Controller == "Holidays" || Model.Controller == "Participants")
						{
							<span>Това действие е необратимо. @(Model.Controller == "Holidays" ? "Празникът" : "Участникът") ще бъде премахнат само ако първо бъдат изтрити свързаните с него традиции.</span>
						}
						else
						{
							<span>Това действие е <strong>необратимо</strong> и ще премахне всички свързани данни.</span>
						}
					</p>
				</div>

				<div class="d-flex flex-column flex-md-row gap-3 justify-content-center pt-2">
					<button type="button" class="d-flex align-items-center btn btn-light rounded-pill px-4 py-3 fw-bold border" data-bs-dismiss="modal">
						<i class="bi bi-x-lg me-2"></i> Отказ
					</button>

					<form asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-id="@Model.Id" method="post" class="m-0">
						<button type="submit" class="btn btn-red rounded-pill px-4 py-3 fw-bold shadow-sm">
							<i class="bi bi-trash-fill me-2"></i> Изтрий завинаги
						</button>
					</form>
				</div>
			</div>

		</div>
	</div>
</div>

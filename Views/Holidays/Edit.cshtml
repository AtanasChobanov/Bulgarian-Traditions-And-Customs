@model BulgarianTraditionsAndCustoms.ViewModels.Holidays.HolidayFormViewModel

@{
	ViewData["Title"] = "Редактиране";
}

<div class="container py-5">
	<div class="row justify-content-center">
		<div class="col-lg-10">
			<div class="ps-4 mb-5">
				<h1 class="fw-bold display-6 mb-0">Редактиране</h1>
				<p class="text-muted">Променете информацията за празника "@Model.Holiday.Name"</p>
			</div>

			<form asp-action="Edit" enctype="multipart/form-data" id="editorForm">
				<input type="hidden" asp-for="Holiday.Id" />

				<div class="mb-5 pb-5">
					<partial name="_HolidayFormPartial" />
				</div>

				<!-- Sticky Footer Bar -->
				<div class="editor-footer glass-panel shadow-lg py-3 px-5 rounded-pill border">
					<div class="d-flex gap-3 justify-content-end">
						<button type="submit" class="btn btn-green px-5 py-2 fw-bold rounded-pill">
							<i class="bi bi-save me-2"></i> Запази промените
						</button>
						<a asp-action="Index" class="btn btn-red-outline px-4 py-2 fw-bold rounded-pill">
							Отказ
						</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script src="~/js/form.js"></script>
}

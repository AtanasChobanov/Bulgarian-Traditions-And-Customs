@model BulgarianTraditionsAndCustoms.Models.Holiday

<div class="modal fade" id="deleteModal-@Model.Id" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">

			<div class="modal-header">
				<h5 class="modal-title text-danger">
					Потвърждение за изтриване
				</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>

			<div class="modal-body">
				<p>
					Сигурни ли сте, че искате да изтриете празника
					<strong class="text-danger">@Model.Name</strong>?
				</p>
				<p class="text-muted mb-0">
					Това действие не може да бъде отменено.
				</p>
			</div>

			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
					Отказ
				</button>

				<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
					<button type="submit" class="btn btn-danger">
						Изтрий
					</button>
				</form>
			</div>

		</div>
	</div>
</div>
